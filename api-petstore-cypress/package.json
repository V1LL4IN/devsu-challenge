{
  "name": "api-petstore-cypress",
  "version": "1.0.0",
  "description": "API Testing para PetStore con Cypress - Ejercicio tÃ©cnico QA",
  "private": true,
  "scripts": {
    "test": "cypress run --spec 'cypress/e2e/**/*.cy.js'",
    "test:headed": "cypress run --headed --spec 'cypress/e2e/**/*.cy.js'",
    "open": "cypress open",
    "report:merge": "mochawesome-merge cypress/reports/*.json > cypress/reports/merged.json",
    "report:html": "marge cypress/reports/merged.json -o cypress/reports/html --inline --charts",
    "posttest": "npm run report:merge && npm run report:html",
    "clean": "rm -rf cypress/reports cypress/videos cypress/screenshots",
    "clean:win": "rd /s /q cypress\\reports cypress\\videos cypress\\screenshots 2>nul || exit 0"
  },
  "keywords": ["api", "testing", "cypress", "petstore", "qa"],
  "author": "QA Candidate",
  "devDependencies": {
    "cypress": "^13.7.0",
    "joi": "^17.11.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.3.1"
  }
}